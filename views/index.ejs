        <script>    
    document.querySelector('.home__search').addEventListener('submit', function (evt) {
    evt.preventDefault();
    
    // Get the search location from the input field
    const location = document.querySelector('#myInput').value;

    // Send an AJAX request to fetch and display search results
    fetch(`/?location=${encodeURIComponent(location)}`)
      .then(response => response.json())
      .then(houselistings => {
        // Handle the received search results
        displaySearchResults(houselistings);
      })
      .catch(error => {
        console.error('Error fetching search results:', error);
      });

    return false; // Prevent the default form submission
  });

  function displaySearchResults(houselistings) {
    const searchResultsContainer = document.getElementById('searchResultsContainer');
    
    // Clear any previous results
    searchResultsContainer.innerHTML = '';

    if (houselistings.length === 0) {
        searchResultsContainer.innerHTML = '<p>No results found.</p>';
    } else {
        houselistings.forEach(house => {
            const resultElement = document.createElement('div');
            resultElement.className = 'search-result';
            resultElement.innerHTML = `
                <li> 
                    Property Name: ${house.title}<br>
                    Size: ${house.size}<br>
                    Own Amount: ${house.ownAmount}<br>
                    Rent: ${house.rent}<br>
                    Star: ${house.star}<br>
                    Semifurnished: ${house.semiFurnished ? 'Yes' : 'No'}<br><br>
                </li>
            `;
            searchResultsContainer.appendChild(resultElement);
        });
    }
}
